<style>
	.hero-section {
		min-height: calc(100vh - 4rem);
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		background: 
			radial-gradient(circle at 20% 50%, rgba(0, 240, 255, 0.1) 0%, transparent 50%),
			radial-gradient(circle at 80% 50%, rgba(0, 102, 255, 0.1) 0%, transparent 50%),
			var(--gray-900);
	}

	.hero-content {
		max-width: 1200px;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 4rem;
		align-items: center;
	}

	.hero-text {
		animation: fadeInLeft 0.8s ease;
	}

	.hero-title {
		font-size: 3.5rem;
		font-weight: 800;
		margin-bottom: 1.5rem;
		line-height: 1.2;
	}

	.neon-text {
		background: linear-gradient(135deg, var(--neon-blue) 0%, var(--neon-blue-light) 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		text-shadow: var(--shadow-neon-sm);
	}

	.hero-subtitle {
		font-size: 1.25rem;
		color: var(--gray-300);
		margin-bottom: 2rem;
		line-height: 1.6;
	}

	.hero-features {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		margin-bottom: 2.5rem;
	}

	.feature {
		display: flex;
		align-items: center;
		gap: 1rem;
		padding: 1rem;
		background: var(--gray-800);
		border-radius: 0.75rem;
		border: 1px solid var(--gray-700);
		transition: all 0.3s ease;
	}

	.feature:hover {
		border-color: var(--neon-blue);
		transform: translateX(8px);
		box-shadow: var(--shadow-neon-sm);
	}

	.feature-icon {
		font-size: 1.5rem;
	}

	.hero-actions {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.hero-visual {
		display: flex;
		justify-content: center;
		align-items: center;
		animation: fadeInRight 0.8s ease;
	}

	.neon-box {
		width: 400px;
		height: 400px;
		background: var(--gray-800);
		border: 3px solid var(--neon-blue);
		border-radius: 2rem;
		box-shadow: var(--shadow-neon-lg);
		display: flex;
		align-items: center;
		justify-content: center;
		position: relative;
		animation: float 3s ease-in-out infinite;
	}

	.neon-box::before {
		content: '';
		position: absolute;
		inset: -3px;
		background: linear-gradient(45deg, var(--neon-blue), var(--electric-blue), var(--neon-blue));
		border-radius: 2rem;
		z-index: -1;
		opacity: 0.5;
		filter: blur(20px);
		animation: rotate 4s linear infinite;
	}

	.box-content {
		text-align: center;
	}

	.icon-large {
		font-size: 8rem;
		margin-bottom: 1rem;
		filter: drop-shadow(0 0 20px var(--neon-blue));
	}

	.box-content h3 {
		font-size: 2rem;
		color: var(--neon-blue);
		margin-bottom: 0.5rem;
		text-shadow: var(--shadow-neon-sm);
	}

	.box-content p {
		color: var(--gray-400);
		font-size: 1.2rem;
	}

	@keyframes fadeInLeft {
		from {
			opacity: 0;
			transform: translateX(-30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes fadeInRight {
		from {
			opacity: 0;
			transform: translateX(30px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-20px);
		}
	}

	@keyframes rotate {
		0% {
			transform: rotate(0deg);
		}
		100% {
			transform: rotate(360deg);
		}
	}

	@media (max-width: 968px) {
		.hero-content {
			grid-template-columns: 1fr;
			gap: 3rem;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.neon-box {
			width: 300px;
			height: 300px;
		}

		.icon-large {
			font-size: 6rem;
		}

		.box-content h3 {
			font-size: 1.5rem;
		}
	}

	@media (max-width: 640px) {
		.hero-title {
			font-size: 2rem;
		}

		.hero-subtitle {
			font-size: 1rem;
		}

		.hero-actions {
			flex-direction: column;
		}

		.hero-actions .btn {
			width: 100%;
			text-align: center;
		}
	}
</style>

