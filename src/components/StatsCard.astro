---
interface Props {
  title: string;
  value: string | number;
  icon: string;
  color?: 'neon' | 'success' | 'warning' | 'info';
}

const { title, value, icon, color = 'neon' } = Astro.props;
---

<div class={`stat-card stat-card-${color}`}>
  <div class="stat-icon">{icon}</div>
  <div class="stat-content">
    <h3 class="stat-title">{title}</h3>
    <p class="stat-value">{value}</p>
  </div>
</div>

<style>
  .stat-card {
    background: var(--gray-800);
    border-radius: 1rem;
    padding: 1.5rem;
    border: 2px solid var(--gray-700);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .stat-card:hover {
    transform: translateY(-4px);
  }

  .stat-card-neon {
    border-color: var(--neon-blue);
  }

  .stat-card-neon:hover {
    box-shadow: var(--shadow-neon-md);
  }

  .stat-card-success {
    border-color: var(--accent-success);
  }

  .stat-card-success:hover {
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.5);
  }

  .stat-card-warning {
    border-color: var(--accent-warning);
  }

  .stat-card-warning:hover {
    box-shadow: 0 0 20px rgba(255, 170, 0, 0.5);
  }

  .stat-card-info {
    border-color: var(--electric-blue);
  }

  .stat-card-info:hover {
    box-shadow: 0 0 20px rgba(0, 102, 255, 0.5);
  }

  .stat-icon {
    font-size: 2.5rem;
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gray-700);
    border-radius: 1rem;
  }

  .stat-card-neon .stat-icon {
    background: rgba(0, 240, 255, 0.1);
    border: 2px solid var(--neon-blue);
  }

  .stat-card-success .stat-icon {
    background: rgba(0, 255, 136, 0.1);
    border: 2px solid var(--accent-success);
  }

  .stat-card-warning .stat-icon {
    background: rgba(255, 170, 0, 0.1);
    border: 2px solid var(--accent-warning);
  }

  .stat-card-info .stat-icon {
    background: rgba(0, 102, 255, 0.1);
    border: 2px solid var(--electric-blue);
  }

  .stat-content {
    flex: 1;
  }

  .stat-title {
    font-size: 0.9rem;
    color: var(--gray-400);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .stat-value {
    font-size: 1.8rem;
    font-weight: 800;
    color: var(--gray-100);
  }

  .stat-card-neon .stat-value {
    color: var(--neon-blue);
    text-shadow: var(--shadow-neon-sm);
  }

  .stat-card-success .stat-value {
    color: var(--accent-success);
  }

  .stat-card-warning .stat-value {
    color: var(--accent-warning);
  }

  .stat-card-info .stat-value {
    color: var(--electric-blue);
  }

  @media (max-width: 768px) {
    .stat-card {
      padding: 1rem;
      gap: 1rem;
    }

    .stat-icon {
      width: 50px;
      height: 50px;
      font-size: 1.8rem;
    }

    .stat-value {
      font-size: 1.5rem;
    }
  }
</style>
